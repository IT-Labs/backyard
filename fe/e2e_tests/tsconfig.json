{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./build",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "commonjs",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include":[
    "src", "server.ts"
  ],
  "exclude": [
      "node_modules",
      "typings",
      "reports"
  ]
}
